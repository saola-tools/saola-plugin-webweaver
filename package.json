{
  "name": "@saola/plugin-webweaver",
  "version": "0.4.2",
  "description": "Saola express-based webweaver layerware",
  "homepage": "https://github.com/saolajs/saola-plugin-webweaver.git",
  "author": {
    "name": "SaolaJS",
    "email": "contact@saolajs.com",
    "url": "https://github.com/saolajs"
  },
  "main": "index.js",
  "directories": {
    "lib": "lib/"
  },
  "files": [
    "bin/",
    "config/",
    "data/",
    "lib/"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "clean-modules": "rm -rf ./node_modules ./package-lock.json",
    "reset-modules": "npm run clean-modules && npm install --ignore-scripts",
    "bootstrap": "npm install --ignore-scripts; npm --prefix=test install --ignore-scripts",
    "build": "npm exec -- babel ./src -d ./lib",
    "check": "npm exec -- eslint config src index.js",
    "check-silent": "npm exec -- eslint --quiet config src index.js",
    "pretest": "npm run clean && NODE_ENV=${DEVEBOT_NODE_ENV:-test} npm run build",
    "testOnly": "npm --prefix=test exec -- mocha --recursive test/tdd/*-test.js test/bdd/*-test.js",
    "test": "npm run testOnly",
    "prepublishOnly": "npm run check-silent && npm run clean && NODE_ENV=${DEVEBOT_NODE_ENV:-production} npm run build",
    "verify": "npm run prepublishOnly && npm run testOnly"
  },
  "keywords": [
    "saola",
    "saola-plugin"
  ],
  "peerDependencies": {
    "@saola/core": "^0.4.1",
    "@saola/plugin-webserver": "^0.4.1"
  },
  "dependencies": {
    "@saola/core": "^0.4.1",
    "@saola/plugin-webserver": "^0.4.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-mongo": "^3.2.0",
    "connect-redis": "^5.2.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "ejs": "^3.1.8",
    "express": "^4.16.2",
    "express-session": "^1.17.2",
    "helmet": "^3.9.0",
    "method-override": "^2.3.10",
    "session-file-store": "^1.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "babel-plugin-minify-mangle-names": "^0.5.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0"
  }
}
